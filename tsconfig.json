{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "noEmit": true,
  }
}